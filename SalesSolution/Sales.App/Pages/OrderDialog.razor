@inherits OrderDialogBase

<MatDialog @bind-IsOpen="@OrderDialogueModel.IsOpen" CanBeClosed=false>
    <EditForm Model="OrderDialogueModel.ModelDTO" OnValidSubmit="@OnSave">
        <DataAnnotationsValidator />
        <MatDialogTitle>@OrderDialogueModel.ActionType Order</MatDialogTitle>
        <MatDialogContent>
                <div class="margin-top-15">
                <p>
                    <MatTextField @bind-Value="@OrderDialogueModel.ModelDTO.State" Label="State" Class="width-500"></MatTextField>
                    <ValidationMessage For="@(() => OrderDialogueModel.ModelDTO.State)" />
                </p>
                <p>
                    <MatTextField @bind-Value="@OrderDialogueModel.ModelDTO.Name" Label="Name" Class="width-500"></MatTextField>
                    <ValidationMessage For="@(() => OrderDialogueModel.ModelDTO.Name)" />
                </p>
            </div>
        </MatDialogContent>
        <MatDialogActions Class="margin-right-15 margin-bottom-15">
            <MatButton Outlined=true Type="submit" Style="color:darkgreen">Save</MatButton>&nbsp;
            <MatButton Outlined=true OnClick="@OnCancel" Style="color:darkorange">Cancel</MatButton>
        </MatDialogActions>
    </EditForm>

</MatDialog>

